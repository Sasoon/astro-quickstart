---
import '../style/custom.css'

export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width">
  <link rel="icon" type="image/x-icon" href="/favicon.ico" />
	<title>{title}</title>
</head>
<body>
	<slot />
</body>
</html>

<!-- page.html -->
<header class="px-4 sm:px-6 md:px-8">
  <h1
    class="text-center pb-12 text-5xl md:text-6xl font-extrabold font-darkergrotesque"
  >
    {title}
  </h1>
</header>

<div class="px-4 sm:px-6 md:px-8 font-muli prose-sm lg:prose-md xl:prose-lg">
  <!-- {{ content }} -->
</div>



